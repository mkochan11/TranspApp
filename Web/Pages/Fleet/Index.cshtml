@page
@{
    ViewData["Title"] = "Fleet";
    @model IndexModel
    int i = 1;
}


<div class="text-center">
    <h1 class="display-5">Our Fleet</h1>
</div>
<div class="container">
    @if (Model.FleetModel.FleetItems.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Model</th>
                    <th scope="col">Year of production</th>
                    <th scope="col">Type</th>
                    <th scope="col">Capacity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fleetItem in Model.FleetModel.FleetItems)
                {
                    <tr>
                    <th scope="row">@i</th>
                    <partial name="_vehicle" for="@fleetItem"/>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="esh-catalog-items row">
            No vehicles in the Fleet.
        </div>
    }
</div>