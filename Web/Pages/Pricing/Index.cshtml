@page

@{
    ViewData["Title"] = "Pricing";
    @model IndexModel;
    int i = 1;
}

<div class="text-center">
    <h1 class="display-4">Pricing</h1>
</div>
<div class="container">
    @if (Model.PricingModel.PricingItems.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Type</th>
                    <th scope="col">Price per 100km</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pricingItem in Model.PricingModel.PricingItems)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <partial name="_price" for="@pricingItem" />
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="esh-catalog-items row">
            Pricing not available.
        </div>
    }
</div>