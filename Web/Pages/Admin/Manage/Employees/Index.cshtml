@page

@{
    ViewData["Title"] = "Manage Employees";
    @model IndexModel
    int i = 1;
}

<div class="text-center">
    <h1 class="display-5">Manage your Employees</h1>
</div>

<div class="container">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email address</th>
                <th scope="col">Is Active</th>
                <th scope="col">Has Account</th> 
                <th scope="col">Details</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.EmployeesModel.Employees)
            {
                <tr>
                    <th scope="row">@i</th>
                    <partial name="_employee" for="@employee" />
                    <td>
                        <a asp-page-handler="Details" asp-route-id="@employee.Id">See details</a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <div>
        <form class="flex-center" method="post" asp-page-handler="Add">
            <button class="btn btn-success text-center">Add employee</button>
        </form>
    </div>
</div>
