@page

@{
    ViewData["Title"] = "Manage Contracts";
    @model IndexModel
    int i = 1;
}

<div class="text-center">
    <h1 class="display-5">Manage Contracts</h1>
</div>

<div class="container">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Contract Id</th>
                <th scope="col">Employee</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contract in Model.ViewModel.EmployeeContracts)
            {
                <tr>
                    <th scope="row">@i</th>
                    <partial name="_contract" for="@contract" />
@*                     <td>
                        <a asp-page-handler="Details" asp-route-id="@contract.Id">See details</a>
                    </td> *@
                </tr>
                i++;
            }
        </tbody>
    </table>
